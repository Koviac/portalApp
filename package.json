{
  "name": "portalapp",
  "version": "0.3.1",
  "author": "Koviac",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "npm": "~5.5.0"
  },
  "scripts": {
    "postinstall": "run-p install:api install:web",
    "install:api": "cd server && npm install",
    "install:web": "cd client && npm install",
    "start": "node ./server/bin/www",
    "devstart": "nodemon ./server/bin/www",
    "test": "NODE_ENV=test&mocha ./server/modules/**/*.spec.js --timeout 320000"
  },
  "nodemonConfig": {
    "ignore": [
      "./client/**/*",
      "./server/**/(*.spec).js"
    ]
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "semver": "^5.5.1"
  },
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-angular": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-security": "^1.4.0",
    "gulp": "^4.0.0",
    "gulp-bump": "^3.1.1",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-ng-annotate": "^2.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-terser": "^1.1.5",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^1.1.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  }
}
